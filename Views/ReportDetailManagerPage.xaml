<Page x:Class="PRN212.Views.ReportDetailManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRN212.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportDetailManagerPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
               Text="Traffic Violation Report Details" 
               FontSize="24" 
               FontWeight="SemiBold"
               Margin="40,20,40,10"/>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,0,40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Content -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Content Grid -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column - Report Information -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <!-- Report ID -->
                        <TextBlock Text="Report ID" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,2"/>
                        <TextBox x:Name="ReportIdTextBox"
                            Height="26"
                            Margin="0,0,0,8"
                            VerticalContentAlignment="Center"
                            Padding="5,0"
                            IsReadOnly="True"/>
                        <TextBlock Text="Processed By" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,2"/>
                         <TextBox x:Name="ProcessbyTextBox"
                            Height="26"
                            Margin="0,0,0,8"
                            VerticalContentAlignment="Center"
                            Padding="5,0"
                            IsReadOnly="True"/>

                        <!-- Status -->
                        <TextBlock Text="Status" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,2"/>
                        <TextBox x:Name="StatusTextBox"
                            Height="26"
                            Margin="0,0,0,8"
                            VerticalContentAlignment="Center"
                            Padding="5,0"
                            IsReadOnly="True"/>

                        <!-- Location Section -->
                        <TextBlock Text="Location" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,2"/>
                        <TextBox x:Name="LocationTextBox"
                            Height="26"
                            Margin="0,0,0,8"
                            VerticalContentAlignment="Center"
                            Padding="5,0"
                            IsReadOnly="True"/>

                        <!-- Violation Type -->
                        <TextBlock Text="Violation Type" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,2"/>
                        <TextBox x:Name="ViolationTypeTextBox"
                            Height="26"
                            Margin="0,0,0,8"
                            VerticalContentAlignment="Center"
                            Padding="5,0"
                            IsReadOnly="True"/>

                        <!-- License Plate -->
                        <TextBlock Text="License Plate" 
                         FontWeight="SemiBold" 
                         Margin="0,0,0,2"/>
                        <TextBox x:Name="LicensePlateTextBox"
                            Height="26"
                            Margin="0,0,0,8"
                            VerticalContentAlignment="Center"
                            Padding="5,0"
                            IsReadOnly="True"/>


                        <!-- Description -->
                        <TextBlock Text="Description" 
                            FontWeight="SemiBold" 
                            Margin="0,0,0,2"/>
                        <TextBox x:Name="DescriptionTextBox"
                            Height="101"
                            Margin="0,0,0,8"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            IsReadOnly="True"
                            Padding="5"/>
                    </StackPanel>

                    <!-- Right Column - Evidence Display -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Evidence" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,5"/>

                        <!-- Combined Evidence Container -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Image Evidence -->
                            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,5,0">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Image Evidence" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1">
                                        <Image x:Name="ImageDisplay" Height="325" HorizontalAlignment="Center" Stretch="Uniform"/>
                                    </Border>
                                    <TextBlock x:Name="ImageFileNameTextBlock" Text="No image available" HorizontalAlignment="Center" Margin="0,2,0,0" Foreground="Gray" Visibility="Hidden"/>
                                </StackPanel>
                            </Border>

                            <!-- Video Evidence -->
                            <Border Grid.Column="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" Margin="5,0,0,0">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Video Evidence" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1">
                                        <MediaElement x:Name="VideoDisplay" Height="325" HorizontalAlignment="Center" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Uniform"/>
                                    </Border>
                                    <TextBlock x:Name="VideoFileNameTextBlock" Text="No video available" HorizontalAlignment="Center" Margin="0,2,0,0" Foreground="Gray" Visibility="Hidden"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <Button x:Name="PlayButton" Content="Play" Width="70" Height="24" Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
                                        <Button x:Name="PauseButton" Content="Pause" Width="70" Height="24" Background="#FF9800" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <Border Grid.Row="1"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0"
                    Margin="0,15,0,0"
                    Padding="0,15,0,0">
                    <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Left">
                        <Button Content="Back"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0" Click="BackToReportList_Click"/>
                        <Button Name="ApproveBtn" Content="Approve"
                            Width="120"
                            Height="30"
                            Background="Green"
                            Margin="0,0,10,0"
                            Foreground="White" Click="ApproveButton_Click"/>
                        <Button Name="RejectBtn" Content="Reject"
                            Width="120"
                            Height="30"
                            Background="Red"
                            Foreground="White" Click="RejectButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
