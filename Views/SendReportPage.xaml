<Page x:Class="PRN212.Views.SendReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN212.Views"
      mc:Ignorable="d"
      Background="White"
      Title="Submit Report">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Header -->
                <TextBlock Text="Submit Traffic Violation Report" 
                          FontSize="28" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,30"/>

                <!-- Form Content -->
                <StackPanel Margin="0,0,0,20">
                    <!-- Location Section -->
                    <TextBlock Text="Location" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="LocationTextBox"
                           Height="35"
                           Margin="0,0,0,20"
                           VerticalContentAlignment="Center"
                           Padding="5,0"/>

                    <!-- Date and Time Section -->
                    <TextBlock Text="Date and Time" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker x:Name="DatePicker"
                                  Height="35"
                                  VerticalContentAlignment="Center"/>
                        <ComboBox Grid.Column="2"
                                x:Name="TimeComboBox"
                                Height="35"
                                VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Morning"/>
                            <ComboBoxItem Content="Afternoon"/>
                            <ComboBoxItem Content="Evening"/>
                            <ComboBoxItem Content="Night"/>
                        </ComboBox>
                    </Grid>

                    <!-- Violation Type -->
                    <TextBlock Text="Violation Type" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>
                    <ComboBox x:Name="ViolationTypeComboBox"
                            Height="35"
                            Margin="0,0,0,20"
                            VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Running Red Light"/>
                        <ComboBoxItem Content="Speeding"/>
                        <ComboBoxItem Content="No Helmet"/>
                        <ComboBoxItem Content="Wrong Way Driving"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    <!-- License Plate -->
                    <TextBlock Text="License Plate (if available)" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="LicensePlateTextBox"
                           Height="35"
                           Margin="0,0,0,20"
                           VerticalContentAlignment="Center"
                           Padding="5,0"/>

                    <!-- Description -->
                    <TextBlock Text="Description" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="DescriptionTextBox"
                           Height="100"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           Padding="5"/>

                    <!-- Evidence Upload -->
                    <TextBlock Text="Evidence" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,8"/>
                    <Border Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <StackPanel Margin="20">
                            <TextBlock Text="Upload Evidence"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,10"/>
                            <Button Content="Choose Files"
                                    Width="120"
                                    Height="30"
                                    Background="#2196F3"
                                    Foreground="White"/>
                            <TextBlock Text="Maximum file size: 10MB"
                                     HorizontalAlignment="Center"
                                     Margin="0,10,0,0"
                                     Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <!-- Buttons -->
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0"
                            Padding="0,20,0,0">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Content="Cancel"
                                    Width="100"
                                    Height="35"
                                    Margin="0,0,10,0"/>
                            <Button Content="Submit Report"
                                    Width="120"
                                    Height="35"
                                    Background="#2196F3"
                                    Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
