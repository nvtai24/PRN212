<Window x:Class="PRN212.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PRN212.Views"
        mc:Ignorable="d"
        Title="Add New User" Height="auto" Width="800">
    <Grid>

        <!-- Form for Adding New User -->
        <Border BorderBrush="#E0E0E0"
                BorderThickness="1"
                Background="#F8F8F8"
                Padding="20"
                CornerRadius="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="500">
            <StackPanel>
                
                <TextBlock Text="Fullname"
                           FontWeight="SemiBold"
                           Padding="5"/>
                <TextBox x:Name="NewUserNameTb"
                         Padding="5"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Phone"
                           FontWeight="SemiBold"
                           Padding="5"/>
                <TextBox x:Name="NewUserPhoneTb"
                         Padding="5"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Email"
                           FontWeight="SemiBold"
                           Padding="5"/>
                <TextBox x:Name="NewUserMailTb"
                         Padding="5"
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Address"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="NewUserAddressTb"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Role"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <ComboBox Name="NewUserRoleCb"
                          Padding="5"
                          VerticalContentAlignment="Center"
                          Margin="0,0,0,10">
                    <ComboBoxItem Tag="Citizen" IsSelected="True">Citizen</ComboBoxItem>
                    <ComboBoxItem Tag="TrafficPolice">TrafficPolice</ComboBoxItem>
                </ComboBox>

                <!-- Password Field -->
                <TextBlock Text="Password"
                           FontWeight="SemiBold"
                           Padding="5"/>
                <PasswordBox x:Name="NewUserPasswordTb"
                             Padding="5"
                             Margin="0,0,0,10"
                             VerticalContentAlignment="Center"/>

                <!-- Confirm Password Field -->
                <TextBlock Text="Confirm Password"
                           FontWeight="SemiBold"
                           Padding="5"/>
                <PasswordBox x:Name="NewUserConfirmPasswordTb"
                             Padding="5"
                             Margin="0,0,0,10"
                             VerticalContentAlignment="Center"/>

                <Button Content="Add User"
                        Height="40"
                        Background="#4CAF50"
                        Foreground="White"
                        Name="AddUserButton"
                        Click="AddUserButton_OnClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
