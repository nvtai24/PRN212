<Page x:Class="PRN212.Views.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN212.Views"

      mc:Ignorable="d"
      Title="NotificationPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="#EFF6FF"
                Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Notifications"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1e3a8a"/>
                    <TextBlock Text="Stay updated with your latest activities"
                               FontSize="14"
                               Foreground="#6B7280"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Mark all as read"
                        Name="MarkAllAsReadBtn"
                        Click="MarkAllAsReadBtn_OnClick"
                        Padding="15,8"
                        Background="#1e3a8a"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"
                                    Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      Margin="0,10,0,0"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,0">
                <!-- Today Section -->
                <TextBlock Text="Today"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#4B5563"
                           Margin="0,10"/>

                <!-- Binding to Notification List -->
                <ItemsControl ItemsSource="{Binding MyNotifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FEF2F2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>


                                    <!-- Notification Icon -->
                                    <Border Grid.Column="0"
                                            Width="40"
                                            Height="40"
                                            Background="#DC2626"
                                            CornerRadius="20"
                                            Margin="0,0,15,0">
                                        <Path Data="M12,2L2,7L12,12L22,7L12,2Z"
                                              Fill="White"
                                              Width="20"
                                              Height="20"
                                              Stretch="Uniform"/>
                                    </Border>

                                    <!-- Notification Content -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Message}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#DC2626"/>
                                        <TextBlock Text="{Binding PlateNumber}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#4B5563"/>
                                        <TextBlock Text="{Binding SendDateString}"
                                                   FontSize="12"
                                                   Foreground="#9CA3AF"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>


                                    <!-- Unread Indicator -->
                                    <CheckBox IsChecked="{Binding IsRead}" Name="IsReadCb" Click="IsReadCb_Checked">

                                    </CheckBox>



                                    <Button Grid.Column="2"
                                        Content="Read More"
                                        Padding="15,8"
                                        Background="Green"
                                        Foreground="White"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    
                                    


                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>



        <!-- Empty State (Hidden by default) -->
        <Grid Grid.Row="1"
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Image Source="/Assets/no-notifications.png"
                       Width="150"
                       Height="150"/>
                <TextBlock Text="No notifications yet"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#4B5563"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,5"/>
                <TextBlock Text="We'll notify you when something arrives"
                           FontSize="14"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
