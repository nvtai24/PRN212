<Page x:Class="PRN212.Views.MyReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN212.Views"
      mc:Ignorable="d"
      Background="White"
      Title="My Reports">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header and Filters -->
        <StackPanel Grid.Row="0" Margin="40,40,40,20">
            <!-- Header -->
            <TextBlock Text="My Submitted Reports" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,30"/>

            <!-- Filters -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Range Filter -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Date Range" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="DateRangeComboBox"
                            Height="35"
                            VerticalContentAlignment="Center">
                        <ComboBoxItem Content="All Time"/>
                        <ComboBoxItem Content="Last 7 Days"/>
                        <ComboBoxItem Content="Last 30 Days"/>
                        <ComboBoxItem Content="Last 3 Months"/>
                    </ComboBox>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Status" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="StatusComboBox"
                            Height="35"
                            VerticalContentAlignment="Center">
                        <ComboBoxItem Content="All Status"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Under Review"/>
                        <ComboBoxItem Content="Resolved"/>
                        <ComboBoxItem Content="Rejected"/>
                    </ComboBox>
                </StackPanel>

                <!-- Apply Filter Button -->
                <Button Grid.Column="4"
                        Content="Apply Filters"
                        Height="35"
                        Width="100"
                        VerticalAlignment="Bottom"
                        Background="#2196F3"
                        Foreground="White"/>
            </Grid>
        </StackPanel>

        <!-- Reports DataGrid -->
        <Border Grid.Row="1" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0">
            <Grid Margin="40,20,40,40">
                <DataGrid x:Name="ReportsDataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         GridLinesVisibility="Horizontal"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         RowHeaderWidth="0"
                         Background="White"
                         RowBackground="White"
                         AlternatingRowBackground="#F8F8F8"
                         CanUserResizeRows="False"
                         VerticalGridLinesBrush="Transparent"
                         HorizontalGridLinesBrush="#E0E0E0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Report ID" 
                                          Binding="{Binding ReportId}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Date Submitted" 
                                          Binding="{Binding SubmitDate}" 
                                          Width="150"/>
                        <DataGridTextColumn Header="Violation Type" 
                                          Binding="{Binding ViolationType}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Location" 
                                          Binding="{Binding Location}" 
                                          Width="250"/>
                        <DataGridTextColumn Header="Status" 
                                          Binding="{Binding Status}" 
                                          Width="120"/>
                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="View Details"
                                                Height="30"
                                                Width="100"
                                                Margin="0,0,10,0"
                                                Background="#2196F3"
                                                Foreground="White"/>
                                        <Button Content="Track Progress"
                                                Height="30"
                                                Width="100"
                                                Background="Transparent"
                                                BorderBrush="#2196F3"
                                                Foreground="#2196F3"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <!-- Empty State Template -->
                    <!-- <DataGrid.NoDataContent> -->
                    <!--     <StackPanel VerticalAlignment="Center"  -->
                    <!--               HorizontalAlignment="Center"  -->
                    <!--               Margin="0,50"> -->
                    <!--         <TextBlock Text="No Reports Found" -->
                    <!--                  FontSize="18" -->
                    <!--                  FontWeight="SemiBold" -->
                    <!--                  HorizontalAlignment="Center"/> -->
                    <!--         <TextBlock Text="You haven't submitted any reports yet." -->
                    <!--                  Foreground="Gray" -->
                    <!--                  Margin="0,10" -->
                    <!--                  HorizontalAlignment="Center"/> -->
                    <!--         <Button Content="Submit New Report" -->
                    <!--                 Height="35" -->
                    <!--                 Width="150" -->
                    <!--                 Margin="0,20,0,0" -->
                    <!--                 Background="#2196F3" -->
                    <!--                 Foreground="White"/> -->
                    <!--     </StackPanel> -->
                    <!-- </DataGrid.NoDataContent> -->
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
