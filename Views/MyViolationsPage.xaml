<Page x:Class="PRN212.Views.MyViolationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN212.Views"
      mc:Ignorable="d"
      Background="White"
      Title="My Violations">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header and Filters -->
        <StackPanel Grid.Row="0" Margin="40,40,40,20">
            <!-- Header -->
            <TextBlock Text="My Traffic Violations" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,30"/>

            <!-- Filters -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Range Filter -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Date Range" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="DateRangeComboBox"
                            Height="35"
                            VerticalContentAlignment="Center">
                        <ComboBoxItem Content="All Time"/>
                        <ComboBoxItem Content="Last 30 Days"/>
                        <ComboBoxItem Content="Last 3 Months"/>
                        <ComboBoxItem Content="Last 6 Months"/>
                        <ComboBoxItem Content="This Year"/>
                    </ComboBox>
                </StackPanel>

                <!-- Payment Status Filter -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Payment Status" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="PaymentStatusComboBox"
                            Height="35"
                            VerticalContentAlignment="Center">
                        <ComboBoxItem Content="All Status"/>
                        <ComboBoxItem Content="Unpaid"/>
                        <ComboBoxItem Content="Paid"/>
                        <ComboBoxItem Content="Overdue"/>
                    </ComboBox>
                </StackPanel>

                <!-- Violation Type Filter -->
                <StackPanel Grid.Column="4">
                    <TextBlock Text="Violation Type" 
                             Margin="0,0,0,5"/>
                    <ComboBox x:Name="ViolationTypeComboBox"
                            Height="35"
                            VerticalContentAlignment="Center">
                        <ComboBoxItem Content="All Types"/>
                        <ComboBoxItem Content="Speeding"/>
                        <ComboBoxItem Content="Red Light"/>
                        <ComboBoxItem Content="No Helmet"/>
                        <ComboBoxItem Content="Wrong Way"/>
                    </ComboBox>
                </StackPanel>

                <!-- Apply Filter Button -->
                <Button Grid.Column="6"
                        Content="Apply Filters"
                        Height="35"
                        Width="100"
                        VerticalAlignment="Bottom"
                        Background="#2196F3"
                        Foreground="White"/>
            </Grid>
        </StackPanel>

        <!-- Violations DataGrid -->
        <Border Grid.Row="1" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0">
            <Grid Margin="40,20,40,40">
                <DataGrid x:Name="ViolationsDataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         GridLinesVisibility="Horizontal"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         RowHeaderWidth="0"
                         Background="White"
                         RowBackground="White"
                         AlternatingRowBackground="#F8F8F8"
                         CanUserResizeRows="False"
                         VerticalGridLinesBrush="Transparent"
                         HorizontalGridLinesBrush="#E0E0E0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Violation ID" 
                                          Binding="{Binding ViolationId}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Date" 
                                          Binding="{Binding ViolationDate}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Violation Type" 
                                          Binding="{Binding ViolationType}" 
                                          Width="150"/>
                        <DataGridTextColumn Header="Location" 
                                          Binding="{Binding Location}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Fine Amount" 
                                          Binding="{Binding FineAmount}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Status" 
                                          Binding="{Binding PaymentStatus}" 
                                          Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="View Details"
                                                Height="30"
                                                Width="100"
                                                Margin="0,0,10,0"
                                                Background="#2196F3"
                                                Foreground="White"/>
                                        <Button Content="Pay Fine"
                                                Height="30"
                                                Width="80"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Visibility="{Binding ShowPayButton}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <!-- Empty State Template -->
                    <!-- <DataGrid.NoDataContent> -->
                    <!--     <StackPanel VerticalAlignment="Center"  -->
                    <!--               HorizontalAlignment="Center"  -->
                    <!--               Margin="0,50"> -->
                    <!--         <TextBlock Text="No Violations Found" -->
                    <!--                  FontSize="18" -->
                    <!--                  FontWeight="SemiBold" -->
                    <!--                  HorizontalAlignment="Center"/> -->
                    <!--         <TextBlock Text="You have no traffic violations on record." -->
                    <!--                  Foreground="Gray" -->
                    <!--                  Margin="0,10" -->
                    <!--                  HorizontalAlignment="Center"/> -->
                    <!--     </StackPanel> -->
                    <!-- </DataGrid.NoDataContent> -->
                </DataGrid>

                <!-- Summary Panel -->
                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        VerticalAlignment="Bottom"
                        Padding="20"
                        Margin="0,20,0,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                  HorizontalAlignment="Left">
                            <TextBlock Text="Total Violations: "
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TotalViolations}"
                                     Margin="5,0,20,0"/>
                            <TextBlock Text="Unpaid Fines: "
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding UnpaidAmount}"
                                     Foreground="#F44336"
                                     Margin="5,0"/>
                        </StackPanel>
                        <Button Content="Pay All Fines"
                                Height="35"
                                Width="120"
                                HorizontalAlignment="Right"
                                Background="#4CAF50"
                                Foreground="White"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
