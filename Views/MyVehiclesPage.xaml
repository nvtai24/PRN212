<Page x:Class="PRN212.Views.MyVehiclesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN212.Views"
      mc:Ignorable="d"
      Background="White"
      Title="My Vehicles">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header and Filters -->
        <StackPanel Grid.Row="0" Margin="40,40,40,20">
            <!-- Header -->
            <TextBlock Text="My Vehicles" 
                      FontSize="28" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,30"/>

            <!-- Control Panel -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Vehicle Type Filter -->
                    <ComboBox x:Name="cmbBrand" 
             Width="150"
             Height="35"
             Margin="0,0,10,0"
             VerticalContentAlignment="Center"
             />

                    <!-- Model Filter -->
                    <ComboBox x:Name="cmbModel" 
             Width="150"
             Height="35"
             Margin="0,0,10,0"
             VerticalContentAlignment="Center"/>

                    <!-- Year Filter -->
                    <ComboBox x:Name="cmbYear" 
             Width="100"
             Height="35"
             Margin="0,0,10,0"
             VerticalContentAlignment="Center"/>

                    <!-- Search Box -->
                    <TextBox Width="200"
                            Height="35"
                            Margin="0,0,10,0"
                            VerticalContentAlignment="Center"
                            Padding="5" x:Name="txtSearch"/>

                    <!-- Search Button -->
                    <Button Content="Search"
                            Width="100"
                            Height="35"
                            Background="#2196F3"
                            Foreground="White" x:Name="btnSearch" Click="btnSearch_Click"/>
                    <Button Content="Reset"
        Width="50"
        Height="35"
        Background="#9E9E9E"
        Foreground="White" 
        x:Name="btnReset" 
        Click="btnReset_Click"
        Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Rest of the content remains the same -->
        <Border Grid.Row="1" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0">
            <Grid Margin="40,20,40,40">
                <!-- Vehicles List -->
                <DataGrid AutoGenerateColumns="False"
                         IsReadOnly="True"
                         GridLinesVisibility="Horizontal"
                         Background="White"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0"
                         RowHeaderWidth="0"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         AlternatingRowBackground="#F8F9FA" Name="dgVehicles">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                          Binding="{Binding VehicleId}"
                                          Width="70" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Plate Number"
                                          Binding="{Binding PlateNumber}"
                                          Width="120"/>
                        <DataGridTextColumn Header="Owner"
                                          Binding="{Binding Owner.FullName}"
                                          Width="100"/>
                        <DataGridTextColumn Header="Brand"
                                          Binding="{Binding Brand}"
                                          Width="120"/>
                        <DataGridTextColumn Header="Model"
                                          Binding="{Binding Model}"
                                          Width="120"/>
                        <DataGridTextColumn Header="Manufacture Year"
                                          Binding="{Binding ManufactureYear}"
                                          Width="100"/>
