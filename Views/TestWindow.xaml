<Window x:Class="PRN212.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PRN212.Views"
        mc:Ignorable="d"
        Title="Violation Details"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Window.Resources>
        <Style x:Key="SectionTitleStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Foreground"
                    Value="#1e3a8a"/>
            <Setter Property="Margin"
                    Value="0,0,0,10"/>
        </Style>

        <Style x:Key="InfoLabelStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Foreground"
                    Value="#4B5563"/>
            <Setter Property="Margin"
                    Value="0,5,10,5"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <Style x:Key="InfoValueStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#111827"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <Style x:Key="BadgeStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="#DC2626"/>
            <Setter Property="CornerRadius"
                    Value="4"/>
            <Setter Property="Padding"
                    Value="8,4"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
                <!-- Header -->
                <Border Background="#1e3a8a"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Traffic Violation Notice"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Detailed information about the reported violation"
                                       FontSize="14"
                                       Foreground="#CBD5E1"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding NotificationId, StringFormat='Notification #{0}'}"
                                   FontSize="14"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"/>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column - Details -->
                    <StackPanel Grid.Column="0"
                                Margin="0,0,15,0">
                        <!-- Driver Information -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Driver Information"
                                           Style="{StaticResource SectionTitleStyle}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Text="Full Name:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding DriverName}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Text="License ID:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding LicenseId}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="2"
                                               Grid.Column="0"
                                               Text="License Class:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1"
                                               Text="{Binding LicenseClass}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="3"
                                               Grid.Column="0"
                                               Text="Contact:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="1"
                                               Text="{Binding ContactInfo}"
                                               Style="{StaticResource InfoValueStyle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Vehicle Information -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Vehicle Information"
                                           Style="{StaticResource SectionTitleStyle}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Text="Plate Number:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Text="{Binding PlateNumber}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Text="Make:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding VehicleMake}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="2"
                                               Grid.Column="0"
                                               Text="Model:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1"
                                               Text="{Binding VehicleModel}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="3"
                                               Grid.Column="0"
                                               Text="Color:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="1"
                                               Text="{Binding VehicleColor}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="4"
                                               Grid.Column="0"
                                               Text="Year:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="4"
                                               Grid.Column="1"
                                               Text="{Binding VehicleYear}"
                                               Style="{StaticResource InfoValueStyle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Violation Details -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Violation Details"
                                           Style="{StaticResource SectionTitleStyle}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Text="Violation Type:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <Border Grid.Row="0"
                                            Grid.Column="1"
                                            Style="{StaticResource BadgeStyle}">
                                        <TextBlock Text="{Binding ViolationType}"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"/>
                                    </Border>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Text="Date &amp; Time:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="{Binding ViolationDateTime}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="2"
                                               Grid.Column="0"
                                               Text="Location:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1"
                                               Text="{Binding ViolationLocation}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="3"
                                               Grid.Column="0"
                                               Text="Fine Amount:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="1"
                                               Text="{Binding FineAmount}"
                                               FontWeight="SemiBold"
                                               Foreground="#DC2626"
                                               FontSize="16"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="4"
                                               Grid.Column="0"
                                               Text="Due Date:"
                                               Style="{StaticResource InfoLabelStyle}"/>
                                    <TextBlock Grid.Row="4"
                                               Grid.Column="1"
                                               Text="{Binding DueDate}"
                                               Style="{StaticResource InfoValueStyle}"/>

                                    <TextBlock Grid.Row="5"
                                               Grid.Column="0"
                                               Text="Description:"
                                               Style="{StaticResource InfoLabelStyle}"
                                               VerticalAlignment="Top"
                                               Margin="0,10,10,5"/>
                                    <TextBlock Grid.Row="5"
                                               Grid.Column="1"
                                               Text="{Binding ViolationDescription}"
                                               Style="{StaticResource InfoValueStyle}"
                                               TextWrapping="Wrap"
                                               Margin="0,10,0,5"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Payment Options -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Payment Options"
                                           Style="{StaticResource SectionTitleStyle}"/>

                                <TextBlock TextWrapping="Wrap"
                                           Margin="0,0,0,10"
                                           Foreground="#4B5563">
                                    Please make your payment before the due date to avoid additional penalties. You can pay online through the portal, at any authorized payment center, or via bank transfer.
                                </TextBlock>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="Pay Now"
                                            Background="#1e3a8a"
                                            Foreground="White"
                                            Padding="10"
                                            Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius"
                                                        Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Grid.Column="1"
                                            Content="Contest Violation"
                                            Background="White"
                                            Foreground="#1e3a8a"
                                            BorderBrush="#1e3a8a"
                                            BorderThickness="1"
                                            Padding="10"
                                            Margin="5,0,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius"
                                                        Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Column - Evidence -->
                    <StackPanel Grid.Column="1">
                        <!-- Evidence Images -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Evidence"
                                           Style="{StaticResource SectionTitleStyle}"/>

                                <Image x:Name="EvidenceImage"
                                       Source="{Binding EvidenceImageUrl}"
                                       Height="200"
                                       Stretch="Uniform"
                                       Margin="0,0,0,15"/>

                                <Expander Header="Video Evidence"
                                          Margin="0,10,0,0">
                                    <StackPanel Margin="0,10,0,0">
                                        <MediaElement x:Name="VideoPlayer"
                                                      LoadedBehavior="Manual"
                                                      UnloadedBehavior="Stop"
                                                      Height="150"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,10,0,0">
                                            <Button Content="Play"
                                                    Padding="10,5"
                                                    Margin="0,0,5,0"
                                                    Click="Play_Click">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius"
                                                                Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                            <Button Content="Pause"
                                                    Padding="10,5"
                                                    Margin="5,0,0,0"
                                                    Click="Pause_Click">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius"
                                                                Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Border>

                        <!-- Map Location -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="Violation Location"
                                           Style="{StaticResource SectionTitleStyle}"/>

                                <Border Background="#E5E7EB"
                                        Height="200"
                                        CornerRadius="8">
                                    <Grid>
                                        <Image x:Name="MapImage"
                                               Source="{Binding MapImageUrl}"
                                               Stretch="UniformToFill"/>
                                        <TextBlock Text="Map View"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#4B5563"/>
                                    </Grid>
                                </Border>

                                <TextBlock Text="{Binding ViolationLocation}"
                                           TextWrapping="Wrap"
                                           Margin="0,10,0,0"
                                           FontSize="13"
                                           Foreground="#4B5563"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>