<Window x:Class="PRN212.Views.MyVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PRN212.Views"
        mc:Ignorable="d"
        Title="My Vehicles" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#1877F2">
            <TextBlock Text="My Vehicles" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Control Panel -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ComboBox Width="150" 
                              Height="35" 
                              Margin="0,0,10,0"
                              VerticalContentAlignment="Center"
                             >
                        <ComboBoxItem Content="All Types"/>
                        <ComboBoxItem Content="Car"/>
                        <ComboBoxItem Content="Motorcycle"/>
                        <ComboBoxItem Content="Truck"/>
                    </ComboBox>
                    <TextBox Width="200" 
                             Height="35" 
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"
                             Padding="5"
                            />
                    <Button Content="Search" 
                            Width="100" 
                            Height="35"
                            Background="#1877F2"
                            Foreground="White"/>
                </StackPanel>

                <!-- Add Vehicle Button -->
                <Button Grid.Column="1" 
                        Content="Register New Vehicle" 
                        Width="150" 
                        Height="35"
                        Background="#42B72A"
                        Foreground="White"/>
            </Grid>

            <!-- Vehicles List -->
            <DataGrid Grid.Row="1" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      Background="White"
                      BorderThickness="1"
                      BorderBrush="#DDD">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                      Binding="{Binding Id}" 
                                      Width="70"/>
                    <DataGridTextColumn Header="Plate Number" 
                                      Binding="{Binding PlateNumber}" 
                                      Width="120"/>
                    <DataGridTextColumn Header="Vehicle Type" 
                                      Binding="{Binding Type}" 
                                      Width="100"/>
                    <DataGridTextColumn Header="Brand" 
                                      Binding="{Binding Brand}" 
                                      Width="120"/>
                    <DataGridTextColumn Header="Model" 
                                      Binding="{Binding Model}" 
                                      Width="120"/>
                    <DataGridTextColumn Header="Color" 
                                      Binding="{Binding Color}" 
                                      Width="100"/>
                    <DataGridTextColumn Header="Registration Date" 
                                      Binding="{Binding RegistrationDate}" 
                                      Width="150"/>
                    <DataGridTemplateColumn Header="Actions" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit" 
                                            Margin="5,0"
                                            Width="60"
                                            Background="#1877F2"
                                            Foreground="White"/>
                                    <Button Content="Delete" 
                                            Margin="5,0"
                                            Width="60"
                                            Background="#DC3545"
                                            Foreground="White"/>
                                    <Button Content="View History" 
                                            Margin="5,0"
                                            Width="90"
                                            Background="#FFC107"
                                            Foreground="Black"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
