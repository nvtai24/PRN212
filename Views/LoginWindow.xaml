<Window x:Class="PRN212.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212.Views"
        mc:Ignorable="d"
        Title="Traffic Violation Reporting System" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1e3a8a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1e40af"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1e3a8a"/>
            <Setter Property="BorderBrush" Value="#1e3a8a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f0f5ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="FancyTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#d1d5db"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" Value="#2563eb"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#2563eb"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="5" Color="#2563eb" Opacity="0.3" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FancyPasswordBoxStyle" TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#d1d5db"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" Value="#2563eb"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" Value="#2563eb"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="5" Color="#2563eb" Opacity="0.3" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Section - Image and Title -->
        <Grid Grid.Column="0" Background="#1e3a8a">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Assets/traffic_safety.png" Width="200" Height="150" Margin="0,0,0,20"/>
                <TextBlock Text="Traffic Violation" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Reporting System" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <TextBlock Text="Building a safer traffic culture together" 
                           Foreground="White" 
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="20,0"/>
            </StackPanel>
        </Grid>

        <!-- Right Section - Login Form -->
        <Border Grid.Column="1" Background="White">
            <StackPanel Margin="40" VerticalAlignment="Center">
                <TextBlock Text="Login" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#1e3a8a"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="Login to continue" 
                           FontSize="14" 
                           Foreground="#6b7280"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Username or Email" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="#4b5563"/>
                <TextBox Style="{StaticResource FancyTextBoxStyle}" 
                         x:Name="txtUsername" 
                         FontSize="14"/>

                <TextBlock Text="Password" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="#4b5563"/>
                <PasswordBox Style="{StaticResource FancyPasswordBoxStyle}" 
                             x:Name="txtPassword"
                             FontSize="14"/>

                <TextBlock HorizontalAlignment="Right" Margin="0,0,0,20">
                    <Hyperlink Foreground="#2563eb" TextDecorations="None">Forgot password?</Hyperlink>
                </TextBlock>

                <Button Content="Login" 
                        Style="{StaticResource LoginButtonStyle}"
                        x:Name="btnLogin"/>
                
                <Button Content="Register new account" 
                        Style="{StaticResource RegisterButtonStyle}"
                        x:Name="btnRegister"/>

                <Grid Margin="0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="#d1d5db" BorderThickness="0,0,0,1" Margin="0,10"/>
                    <TextBlock Grid.Column="1" Text="or" Margin="10,0" Foreground="#6b7280"/>
                    <Border Grid.Column="2" BorderBrush="#d1d5db" BorderThickness="0,0,0,1" Margin="0,10"/>
                </Grid>

                <Button Content="Sign in with Government ID" 
                        Style="{StaticResource RegisterButtonStyle}"
                        x:Name="btnGovID"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>