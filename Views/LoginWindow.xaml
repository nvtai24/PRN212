<Window x:Class="PRN212.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PRN212.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="#1E90FF"> <!-- Màu nền xanh dương -->
        <!-- Hình ảnh minh họa giao thông -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Image Source="../Images/traffic1.jpg" Width="80" Height="80" Margin="0,0,0,10" />
            <!-- <TextBlock Text="Traffic Management System" FontSize="20" Foreground="White" FontWeight="Bold" /> -->
        </StackPanel>

        <!-- Form đăng nhập -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="250" Height="40" Margin="0,10" Padding="5" 
                     Background="White" Foreground="Black" FontSize="16"  />
            <PasswordBox x:Name="PasswordBox" Width="250" Height="40" Margin="0,10" Padding="5" 
                         Background="White" Foreground="Black" FontSize="16" />
            <Button Content="Login" Width="250" Height="40" Margin="0,20" Background="#FFA500" 
                    Foreground="White" FontSize="16" />
            <Button Content="Register" Width="250" Height="40" Margin="0,10" Background="#FFA500" 
                    Foreground="White" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>
